{
  "name": "n-solve-cloudflare",
  "version": "2.0.0",
  "description": "n.Solve - Vulnerability Lifecycle Manager | Cloudflare Edge Computing",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "echo 'Workers build handled by Wrangler'",
    "dev": "wrangler dev",
    "deploy": "./deploy-github.sh",
    "deploy:webhook": "wrangler deploy --name webhook-receiver",
    "deploy:core": "wrangler deploy --name core-processor",
    "deploy:translation": "wrangler deploy --name translation-agent",
    "deploy:jira": "wrangler deploy --name jira-integration",
    "db:init": "wrangler d1 execute ness_vlm_db --file=schema/d1-schema.sql",
    "db:query": "wrangler d1 execute ness_vlm_db",
    "db:migrations": "wrangler d1 migrations list ness_vlm_db",
    "tail:webhook": "wrangler tail webhook-receiver",
    "tail:core": "wrangler tail core-processor",
    "lint": "eslint workers/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {},
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "wrangler": "^3.90.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "n.Solve",
    "ness",
    "vulnerability-management",
    "cloudflare",
    "edge-computing",
    "security",
    "pentest",
    "workers",
    "d1",
    "typescript"
  ],
  "author": "ness. <security@ness.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/resper1965/nSolve.git"
  },
  "bugs": {
    "url": "https://github.com/resper1965/nSolve/issues"
  },
  "homepage": "https://github.com/resper1965/nSolve#readme"
}
